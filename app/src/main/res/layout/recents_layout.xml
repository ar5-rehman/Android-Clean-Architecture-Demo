<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:layout_margin="5dp"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSrc"
            android:layout_width="38.21dp"
            android:layout_height="38.21dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_eleven"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La cité des Arts"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:textColor="#525353"
            android:fontFamily="@font/montserrat_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="7.54dp"
                android:layout_height="10dp"
                android:textColor="#525353"
                android:src="@drawable/map_marker"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="24dp"
                android:layout_height="10dp"
                android:text="3.9km"
                android:textSize="8sp"
                android:textColor="#525353"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/hour"
                android:layout_width="26dp"
                android:layout_height="10dp"
                android:text="Fermé"
                android:textSize="8sp"
                android:textColor="#CE533D"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:text="Culture"
                android:textSize="8sp"
                android:textColor="#6F7171"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="7dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>